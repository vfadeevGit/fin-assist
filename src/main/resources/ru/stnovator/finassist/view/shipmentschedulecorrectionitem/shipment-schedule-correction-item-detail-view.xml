<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ru.stnovator.finassist.view.shipmentschedulecorrectionitem/ShipmentScheduleCorrectionItemDetailView.title"
      focusComponent="form">
    <data>
        <instance id="shipmentScheduleCorrectionItemDc"
                  class="ru.stnovator.finassist.entity.ShipmentScheduleCorrectionItem">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <formLayout id="form" dataContainer="shipmentScheduleCorrectionItemDc">
            <entityPicker id="correctionField" property="correction"/>
            <datePicker id="itemDateField" property="itemDate"/>
            <textField id="amountField" property="amount"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
