<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ru.stnovator.finassist.view.paymentschedulecorrectionitem/PaymentScheduleCorrectionItemListView.title"
      focusComponent="paymentScheduleCorrectionItemsDataGrid">
    <data>
        <collection id="paymentScheduleCorrectionItemsDc"
                    class="ru.stnovator.finassist.entity.PaymentScheduleCorrectionItem">
            <fetchPlan extends="_base"/>
            <loader id="paymentScheduleCorrectionItemsDl" readOnly="true">
                <query>
                    <![CDATA[select e from PaymentScheduleCorrectionItem e order by e.itemDate]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="paymentScheduleCorrectionItemsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="paymentScheduleCorrectionItemsDataGrid.create"/>
            <button id="editBtn" action="paymentScheduleCorrectionItemsDataGrid.edit"/>
            <button id="removeBtn" action="paymentScheduleCorrectionItemsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="paymentScheduleCorrectionItemsDl"/>
        </hbox>
        <dataGrid id="paymentScheduleCorrectionItemsDataGrid"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em"
                  dataContainer="paymentScheduleCorrectionItemsDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="correction"/>
                <column property="itemDate"/>
                <column property="amount"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
