<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ru.stnovator.finassist.view.paymentfact/PaymentFactListView.title"
      focusComponent="paymentFactsDataGrid">
    <data>
        <collection id="paymentFactsDc"
                    class="ru.stnovator.finassist.entity.PaymentFact">
            <fetchPlan extends="_base"/>
            <loader id="paymentFactsDl" readOnly="true">
                <query>
                    <![CDATA[select e from PaymentFact e order by e.paymentDate desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="paymentFactsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="paymentFactsDataGrid.create"/>
            <button id="editBtn" action="paymentFactsDataGrid.edit"/>
            <button id="removeBtn" action="paymentFactsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="paymentFactsDl"/>
        </hbox>
        <dataGrid id="paymentFactsDataGrid"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em"
                  dataContainer="paymentFactsDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="paymentDate"/>
                <column property="amount"/>
                <column property="contract"/>
                <column property="project"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
